@model KisaanMart.Data.Models.Apps

@{
    ViewData["Title"] = "Create";
}




<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h1>Agriculture Apps</h1>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppName" class="control-label"></label>
                <input asp-for="AppName" class="form-control" />
                <span asp-validation-for="AppName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppDescription" class="control-label"></label>
                @*<input asp-for="AppDescription" class="form-control" />*@
                <textarea asp-for="AppDescription" class="form-control" rows="5" cols="40"></textarea>
                <span asp-validation-for="AppDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppUrl" class="control-label"></label>
                <input asp-for="AppUrl" class="form-control" />
                <span asp-validation-for="AppUrl" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="AppImage" class="control-label"></label>
                <input asp-for="AppImage" class="form-control" />
                <span asp-validation-for="AppImage" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="AppImage" class="control-label"></label>
                <input type="file" name="AppImage" id="AppImage" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>

    <div>
        <a asp-action="Index" class="btn btn-info">Back to Apps</a>
    </div>

