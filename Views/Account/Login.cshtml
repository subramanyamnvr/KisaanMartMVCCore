@model KisaanMart.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}



    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>Login</h1>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserPhoneNo" class="control-label">Phone No</label>
                    <input asp-for="UserPhoneNo" class="form-control" />
                    <span asp-validation-for="UserPhoneNo" class="text-danger"></span>
                </div>
               
            
                <div class="form-group" >
                    <input type="submit" value="Send OTP" class="btn btn-primary" id="OTPSubmit" />
                </div>

            </form>
        </div>
        <div class="col-md-4"></div>
    </div>



